
DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = diOSIntegration
XPIDL_MODULE		= diOSIntegration
LIBRARY_NAME	= osinteg
SHORT_LIBNAME = osinteg
EXPORT_LIBRARY	= 1
IS_COMPONENT	= 1
MODULE_NAME	= diOSIntegration
FORCE_SHARED_LIB = 1

XPIDLSRCS	= \
		diIOSIntegration.idl \
		$(NULL)

EXPORTS		= \
		diOSIntegrationCIID.h \
		$(NULL)

CMMSRCS         = diOSIntegration.mm

CPPSRCS   = \
    diOSIntegrationFactory.cpp \
    $(NULL)

EXTRA_DSO_LDOPTS = \
    -framework Carbon \
    $(XPCOM_GLUE_LDOPTS) \
    $(NSPR_LIBS) \
		$(LIBS_DIRS) \
		$(MOZ_UNICHARUTIL_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

# Need to link with CoreFoundation on Mac
ifeq (cocoa,$(MOZ_WIDGET_TOOLKIT))
EXTRA_DSO_LDOPTS += \
		$(TK_LIBS) \
		$(NULL)
endif

